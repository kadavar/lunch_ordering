<% provide(:title, 'New Food') %>
<h1>New Food</h1>

<div class="row">
  <div class="span6 offset6">

    <%= form_for(:food, url: foods_path) do |f| %>

        <%= f.label :food_name %>
        <%= f.text_field :name %>

        <%= f.label :price %>
        <%= f.text_field :price %>

        <%= f.label :food_type %>
        <%= f.select :course, options_for_post_food("first") %>
        <%= f.submit "Create Food", class: "btn btn-large btn-primary" %>
    <% end %>


  </div>
</div>
