<% provide(:title,'Today Menu') %>
<div class="row ">
  <div class="span16 offset1 today_menu ">
     
      <h1>Today Menu</h1>
      
    <div class ="row" >
       
        <div class="span5 today today_first">
           <div class="heads span4">
            
            <h4>First course</h4>
        <div class="span1"><b>Name</b></div> 
            <div class="span1"><b>Price</b></div><div class="span1  ation_span"><b>Action</b></div><br> </div>
<ul class="foods food_first_today_menu ul_today">
    <% @menu_food[:first].each do |f| %>
    <%= render :partial => "menu_food", :locals => {:food => f} %>
    <% end %>
    
</ul>


            
        </div> 
        <div class="span5 today today_second ">
            <div class="heads span4">   <h4>Second course</h4>
      <div class="span1 "><b>Name</b></div> 
        <div class="span1 "><b>Price</b></div>  
           <div class="span1  ation_span"><b>Action</b></div><br></div>
<ul class="foods food_second_today_menu ul_today">
  
    <% @menu_food[:second].each do |f| %>
    <%= render :partial => "menu_food", :locals => {:food => f} %>
    <% end %>
</ul>


        </div> 
        <div class="span5 today today_drink">
            <div class="heads span4">   <h4>Drink course</h4>
      <div class="span1"><b>Name</b></div> 
        <div class="span1"><b>Price</b></div>
           <div class="span1 ation_span"><b>Action</b><br></div></div>
<ul class="foods food_drink_today_menu ul_today">
    <% @menu_food[:drink].each do |f| %>
    <%= render :partial => "menu_food", :locals => {:food => f} %>
    <% end %>
</ul>


        </div> 
       
    </div> 
   
    </div>
</div>
<div class="row all_food">
  <div class="span16 offset1 today_menu ">
      <br>
     <div class="new_food_but"><%= link_to "Add a new food", newfood_path, class: "btn btn-large btn-primary" %></div> 
      <br>
      <h1>All Food</h1>
    
    <div class ="row" >
       
        <div class="span5 all_first today">
        <div class="heads span4">     <h4>First course</h4>
           <div class="span1"><b>Name</b></div> 
        <div class="span1"><b>Price</b></div> 
            <div class="span1  ation_span"><b>Action</b></div><br></div>
<ul class="foods all_food_first ul_today">
    <%= render @foods[:first] %>
</ul>

<%= will_paginate @foods[:first], :param_name => 'first_page' %>
            
        </div> 
        <div class="span5 all_second today">
            <div class="heads span4">   <h4>Second course</h4>
             <div class="span1"><b>Name</b></div> 
        <div class="span1"><b>Price</b></div>
           <div class="span1 ation_span"><b>Action</b></div><br></div> 
<ul class="foods all_food_second ul_today">
    <%= render @foods[:second] %>
</ul>
            <%= will_paginate @foods[:second] ,:param_name => 'second_page'%>

        </div> 
        <div class="span5 all_drink today">
        <div class="heads span4">     <h4>Drink course</h4>
           <div class="span1"><b>Name</b></div> 
        <div class="span1"><b>Price</b></div>
       <div class="span1  ation_span"><b>Action</b></div><br> </div> 
<ul class="foods all_food_drink ul_today">
    <%= render @foods[:drink] %>
</ul>
            <%= will_paginate @foods[:drink] ,:param_name => 'drink_page'%>

        </div> 
       
    </div> 
   
    </div>
</div>